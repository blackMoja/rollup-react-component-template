{
  "compilerOptions": {
    // basic
    "strict": true,
    "jsx": "react-jsx",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // features
    "skipLibCheck": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    // file system
    "baseUrl": ".",
    "outDir": "./dist",
    "declarationDir": "./dist",
    // module system
    "moduleResolution": "node",
    "target": "es5",
    "module": "ESNext",
    "emitDeclarationOnly": true,
    // path alias
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"],
    "lib": ["esnext", "dom", "dom.iterable"],
    "plugins": [
      // {
      //   "transform": "typescript-transform-paths"
      // },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": ["src"],
  "exclude": [
    "./dist",
    "./node_modules",
    "./src/storybook",
    "./src/**/*.test.tsx",
    "./src/**/*.stories.tsx",
    "./src/**/*.codegen.ts",
    "./src/foundation/breakpoints/breakpoints.ts",
    "./src/foundation/colors/colors.ts",
    "./src/foundation/typography/typography.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
